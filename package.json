{
  "name": "stylish",
  "version": "1.1.1",
  "description": "Simple CSS-in-JS library",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rm -rf coverage/ .nyc_output/ node_modules/.cache/",
    "lint": "standard \"src/**/*.js\" \"test/**/*.js\"|snazzy",
    "format": "prettier-standard \"src/**/*.js\" \"test/**/*.js\"",
    "build:dev": "npm run lint && microbundle --format es,cjs --no-compress",
    "build:watch": "npm run lint && microbundle watch --format es,cjs --no-compress",
    "build:prod": "npm run lint && microbundle --format es,cjs",
    "test": "npm run clean && npm run lint && nyc ava",
    "coverage": "npm run test && nyc report --reporter=html && http-server coverage/ -p 8000"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ludlovian/stylish.git"
  },
  "author": "Alan Layng",
  "license": "unlicense",
  "bugs": {
    "url": "https://github.com/ludlovian/stylish/issues"
  },
  "homepage": "https://github.com/ludlovian/stylish#readme",
  "devDependencies": {
    "ava": "^1.2.1",
    "esm": "^3.2.6",
    "http-server": "^0.11.1",
    "microbundle": "^0.10.1",
    "nyc": "^13.3.0",
    "prettier-standard": "^9.1.1",
    "snazzy": "^8.0.0",
    "standard": "^12.0.1"
  },
  "ava": {
    "require": [
      "esm"
    ]
  }
}
